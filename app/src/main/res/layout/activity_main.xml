<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <android.support.v4.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">




                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />


            </android.support.design.widget.AppBarLayout>


            <android.support.v7.widget.CardView
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="50dp"
                android:layout_width="130dp"
                app:cardCornerRadius="10dp"
                android:layout_height="170dp" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/bp"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        />

                    <RelativeLayout
                        android:background="#9965f4"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text= "Blood Pressure"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:layout_marginTop="200dp"
                android:layout_marginLeft="200dp"
                android:layout_width="130dp"
                app:cardCornerRadius="10dp"
                android:layout_height="170dp" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/rate"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        />
                <RelativeLayout
                    android:background="#D32F2F"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Heart Rate"
                        android:textColor="#000000" />
                </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="390dp"
                android:layout_marginLeft="200dp"
                android:layout_width="130dp"
                app:cardCornerRadius="10dp"
                android:layout_height="170dp" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/blood"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        />
                    <RelativeLayout
                        android:background="#df55f2"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Oxygen Saturation"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_marginTop="390dp"
                android:layout_marginLeft="50dp"
                android:layout_width="130dp"
                app:cardCornerRadius="10dp"
                android:layout_height="170dp" >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/resp"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        />
                    <RelativeLayout
                        android:background="#ff8d00"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Respiration Rate"
                            android:textColor="#000000" />
                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </FrameLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:background="#ffccBD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:menu="@menu/nav_menu"
            app:headerLayout="@layout/nav_header"/>


    </android.support.v4.widget.DrawerLayout>


</android.support.design.widget.CoordinatorLayout>
