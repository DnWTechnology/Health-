<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.apps.kunalfarmah.vihaan">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/report_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/report_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.apps.kunalfarmah.vihaan.MyAppointmentsActivity"
            android:label="My Appointments"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.UserAppointments"
            android:label="My Appointments"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.TakeAppointmentForm"
            android:label="Book Appointment"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.MyChatsActivity"
            android:label="Chat"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.PatientInfoActivity"
            android:label="Patient Info"/>
        <activity android:name=".DoctorInfo" />
        <activity
            android:name="com.apps.kunalfarmah.vihaan.DoctorActivity"
            android:label="@string/title_activity_doctor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.apps.kunalfarmah.vihaan.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apps.kunalfarmah.vihaan.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.apps.kunalfarmah.vihaan.LoginActivity"
            android:label="@string/app_name"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.VitalSignsActivity"
            android:label="Measure Vital signs"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.AboutVitalSigns"
            android:label="About Vital signs"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.ConsultActivity"
            android:label="Consult a Doctor"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.MonitoringInstructions"
            android:label="Measure Vital signs"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.RecordVitalSigns"
            android:label="Vital Signs Wizard"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.VitalSignsResults"
            android:label="Results"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.SettingsActivity"
            android:label="Settings"/>
        <activity android:name="com.apps.kunalfarmah.vihaan.tempActivity" />
        <activity android:name="com.apps.kunalfarmah.vihaan.InfoActivity" />
        <activity android:name="com.apps.kunalfarmah.vihaan.RemedyActivity" />
        <activity android:name="com.apps.kunalfarmah.vihaan.checksum" />
        <activity android:name="com.apps.kunalfarmah.vihaan.ChatRoomActivity"/>

        <activity
            android:name="com.paytm.pgsdk.PaytmPGActivity"
            android:configChanges="keyboardHidden|orientation|keyboard"
            android:screenOrientation="portrait" />
        <activity android:name="com.apps.kunalfarmah.vihaan.DoctorForm" />
    </application>

</manifest>